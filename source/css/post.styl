.article {
  margin-top: 10px;
  margin-left: 50px;
  margin-right: 50px;
  padding: 30px 50px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 20px;
  box-shadow: 0 0 4px #ddd;    
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  color: green;
  font-weight: bold
}

    

.article-title {
  color: blue;
}

.article-meta {
	color: green;
}

.article-content {
	color: gray;
}

.headerlink {
  color: red;
}
