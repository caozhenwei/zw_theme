.content {
  display: flex;
}

.article {
  margin-top: 10px;
  margin-left: 50px;
  max-width: 100%;
  /*background-color: #fff;*/
  /*border: 1px solid #ddd;*/
  /*border-radius: 20px;*/
  /*box-shadow: 0 0 4px #ddd; */
  width: 75%;  
  color: #ccc;
  font-size: 16px; 
}

h1, h2, h3, h4, h5, h6 {
  margin: 5px 0;
  color: green;
  font-weight: bold
}    

.article-title {
  color: blue;
}

.article-meta {
	color: green;
}

.article-content {
	color: gray;
}

.article-content img {
  max-width: 100%;
  display: block;
  margin: auto;
}

.headerlink {
  color: red;
}

figure {
  background-color: #1d1f21;
  padding: 20px;
  overflow: auto;
}

/*目录样式*/
#toc-sidebar {
  position: fixed;
  display: inline;
  width: 25%;
  float: left;
  margin-left: 80%;
  font-size: 14px;
}

.toc-article {
  position: absolute;
  border-left: rgba(88,88,88,0.1) 1px solid;
  margin: 50px 0;
  padding 1em 1em 0 1em;
}

.nav-link {
  color: #aaa;
  padding: 1px !important;
  text-decoration: none;
  &:hover {
    color: #368CCB
  }
}
  
  