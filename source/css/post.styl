.article {
  margin-top: 10px;
  margin-left: 50px;
  margin-right: 50px;
  padding: 30px 50px;
  max-width: 100%;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 20px;
  box-shadow: 0 0 4px #ddd;    
}

img {
  max_width: 100%;
  display: block;
  margin: auto;
}

h1, h2, h3, h4, h5, h6 {
  margin: 5px 0;
  color: green;
  font-weight: bold
}    

.article-title {
  color: blue;
}

.article-meta {
	color: green;
}

.article-content {
	color: gray;
}

.headerlink {
  color: red;
}

figure {
  background-color: #1d1f21;
  padding: 20px;
  overflow: auto;
}
