.header {
  margin-top: 0em
  display: flex
  justify-content: space-between
  align-items: center
  /*background-color: yellow;*/
  height: 100px;

  .blog-title {
    margin-left: 50px;
    /*background-color: red;*/
    align-items: center;
    display: flex;
  }

  .blog-title .logo {
    width: 60px;
    height: 60px;
    border: 1px solid #368CCB;
  }

  .blog-title .title {
    margin-left: 20px;
    color: #AAA;
    font-size: 2em;
    text-decoration: none;
  }

  .navbar {
    margin-right: 50px;
  }

  .menu {
    margin: 0;
    padding: 0;
    /*background-color: green;*/

    .menu-item {
      display: inline-block;
      margin-right: 10px;
    }

    .menu-item-link {
      color: #AAA;
      text-decoration: none;

      &:hover {
        color: #368CCB;
      }
    }
  }
}